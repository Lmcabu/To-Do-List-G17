<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imageTaskAllTaskPage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/txtTaskNameAllTaskPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageTaskAllTaskPage"
            android:text="Task Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTaskDetailAllTaskPage"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTaskNameAllTaskPage"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageTaskAllTaskPage"
            android:text="Detail: \n Test 1111111111111111111111111111111111111111111111111111111111111111"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageCompleteStatusAllTaskPage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_baseline_close" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>