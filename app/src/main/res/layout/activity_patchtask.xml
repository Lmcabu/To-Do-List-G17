<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/update_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/update_detail"
        android:layout_width="377dp"
        android:layout_height="190dp"
        android:layout_below="@id/update_addLabel"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:hint="Detail"
        android:inputType="textMultiLine"
        android:gravity="start|top"
        android:layout_marginTop="40sp"/>

    <Button
        android:id="@+id/update_addLabel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/update_Title"
        android:layout_marginTop="12dp"
        android:text="Add label"
        android:textSize="10sp" />

    <Button
        android:id="@+id/update_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/updateTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Update" />

    <CheckBox
        android:id="@+id/doneCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/updateTask"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="10dp"
        android:text="Task Done"
        android:textSize="15sp"/>



</RelativeLayout>